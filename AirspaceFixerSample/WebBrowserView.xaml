<UserControl xmlns:Controls="clr-namespace:Microsoft.Toolkit.Wpf.UI.Controls;assembly=AirspaceFixerSample"  x:Class="AirspaceFixerSample.WebBrowserView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:asf="clr-namespace:AirspaceFixer;assembly=AirspaceFixer"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:AirspaceFixerSample"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             xmlns:controls="clr-namespace:Microsoft.Toolkit.Wpf.UI.Controls;assembly=Microsoft.Toolkit.Wpf.UI.Controls.WebView"
             d:DesignHeight="700"
             d:DesignWidth="1000"
             mc:Ignorable="d">

    <UserControl.Resources>

        <sys:Boolean x:Key="BooleanTrue">true</sys:Boolean>
        <sys:Boolean x:Key="BooleanFalse">false</sys:Boolean>

    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <Button x:Name="btnBack"
                    Width="100"
                    VerticalAlignment="Stretch"
                    Click="btnBack_Click"
                    Content="Back"
                    DockPanel.Dock="Left" />
            <Button x:Name="btnForward"
                    Grid.Column="1"
                    Width="100"
                    VerticalAlignment="Stretch"
                    Click="btnForward_Click"
                    Content="Forward"
                    DockPanel.Dock="Right" />

            <TextBox Name="txtUrl"
                     Grid.Column="2"
                     VerticalContentAlignment="Center"
                     FontSize="16"
                     KeyUp="txtUrl_KeyUp"
                     Padding="10,0" />

            <Button Grid.Column="3"
                    Width="100"
                    VerticalAlignment="Stretch"
                    Command="{Binding ShowDialogCommand}"
                    CommandParameter="{StaticResource BooleanTrue}"
                    Content="Settings"
                    DockPanel.Dock="Right" />
        </Grid>

        <asf:AirspacePanel Grid.Row="1"
                           FixAirspace="{Binding FixAirspace}">
            <!--<WebBrowser x:Name="Browser"
                        Navigating="Browser_Navigating" />-->
<controls:WebView x:Name="Browser"
                  NavigationStarting="Browser_OnNavigationStarting"/>
        </asf:AirspacePanel>

    </Grid>
</UserControl>
